<%- include('header') -%>

<div class="box" id="heading">
    <h1> <%= listType %> </h1>
</div>

<div class="box">

    <% dailyList.forEach((list) => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= list._id %>" onchange="this.form.submit()">
            <p> <%= list.item %> </p>
        </div>
    </form>
    <% }) %>


    <form class="item" action="/" method="post">
        <input type="text" name="newListItem" placeholder="Add Item" autocomplete="off">
        <button type="submit" name="list" value=<%= listType %>>+</button>
    </form>
</div>

<%- include('footer') -%>